@model Get_Movies.Models.Movie
@using (Html.BeginForm("addmovie", "Admin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login100-form validate-form" }))
{
    <!-- Regular Input -->
    <div class="form-group">
        <label for="regular1" class="control-label">Title</label>
        @Html.TextBoxFor(u => u.Title, new { @class = "form-control", Name = "title" })

    </div>
    <div class="form-group">
        <label for="regular1" class="control-label">Director</label>
        @Html.TextBoxFor(u => u.Director, new { @class = "form-control", Name = "director" })
    </div>
    <div class="form-group">
        <label for="regular1" class="control-label">Poster</label>
        @Html.TextBoxFor(u => u.Poster, new { @class = "form-control", Name = "poster" })
    </div>
    <div class="form-group">
        <label for="regular1" class="control-label">Release_Date</label>
        @Html.TextBoxFor(u => u.Release_Date, new { @class = "form-control", Name = "release_date" })
    </div>
    <div class="form-group">
        <label for="regular1" class="control-label">Description</label>
        @Html.TextBoxFor(u => u.Description, new { @class = "form-control", Name = "description" })
    </div>
    <div class="form-group">
        <label for="regular1" class="control-label">Duration</label>
        @Html.TextBoxFor(u => u.Duration, new { @class = "form-control", Name = "duration" })
    </div>


    <!-- Bootstrap Selectbox -->
    <div class="form-group">
        <label for="regular1" class="control-label">Genre</label>
        <select class="form-control">
            <option>default</option>

        </select>
    </div>

    <div>
        <button type="submit" class="btn btn-primary"> Add </button>
    </div>
}
