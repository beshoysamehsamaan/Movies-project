@using System.Web.Optimization
@model Get_Movies.Models.Movie

@{
    ViewBag.Title = "Admin Dashboard";
}


<!--Basic Bootstrap Tab start -->
<div>
    <!-- Nav tabs -->
    <ul id="myTabs" class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Add Movie</a></li>
        <li role="presentation"><a href="#about" aria-controls="about" role="tab" data-toggle="tab">Update Movie</a></li>
        <li role="presentation"><a href="#work" aria-controls="work" role="tab" data-toggle="tab">Delete Movie</a></li>
        <li role="presentation"><a href="#work" aria-controls="work" role="tab" data-toggle="tab">List Movie</a></li>
        <li role="presentation"><a href="#work" aria-controls="work" role="tab" data-toggle="tab">Review Movie Requests</a></li>

        <li role="presentation"><a href="#work" aria-controls="work" role="tab" data-toggle="tab">Ban User</a></li>
        <li role="presentation"><a href="#work" aria-controls="work" role="tab" data-toggle="tab">Add Advertisement</a></li>
    </ul>
    <div class="pmd-card">
        <div class="pmd-card-body">
            <!-- Tab panes -->
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="home">

                    <div>
                        @Html.Partial("../Shared/Partials/Forms/Movie/addmovie")
                    </div>
                </div>




                <div role="tabpanel" class="tab-pane" id="about">Fixed tabs have equal width, calculated either as the view width divided by the number of tabs, or based on the widest tab label. To navigate between fixed tabs, touch the tab or swipe the content area left or right.</div>
                <div role="tabpanel" class="tab-pane" id="work">To navigate between scrollable tabs, touch the tab or swipe the content area left or right. To scroll the tabs without navigating, swipe the tabs left or right.</div>

            </div>
        </div>
    </div>
</div>