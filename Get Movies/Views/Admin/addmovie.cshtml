@using System.Web.Optimization
@model Get_Movies.Models.Movie

@{
    ViewBag.Title = "Admin Dashboard";
}


<!--Basic Bootstrap Tab start -->
<div>
    <!-- Nav tabs -->
    <ul id="myTabs" class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#add" aria-controls="add" role="tab" data-toggle="tab">Add Movie</a></li>
        <li role="presentation"><a href="#delete" aria-controls="delete" role="tab" data-toggle="tab">Delete Movie</a></li>
        <li role="presentation"><a href="#update" aria-controls="update" role="tab" data-toggle="tab">Update Movie</a></li>
        <li role="presentation"><a href="#list" aria-controls="list" role="tab" data-toggle="tab">List Movie</a></li>
        <li role="presentation"><a href="#review" aria-controls="review" role="tab" data-toggle="tab">Review Movie Requests</a></li>

        <li role="presentation"><a href="#ban" aria-controls="ban" role="tab" data-toggle="tab">Ban User</a></li>
        <li role="presentation"><a href="#ads" aria-controls="ads" role="tab" data-toggle="tab">Add Advertisement</a></li>
    </ul>
    <div class="pmd-card">
        <div class="pmd-card-body">
            <!-- Tab panes -->
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="add">

                    <div>
                        @Html.Partial("../Shared/Partials/Forms/Movie/addmovie")
                    </div>
                </div>

                <div role="tabpanel" class="tab-pane" id="delete">

                    <div>
                        @Html.Partial("../Shared/Partials/Forms/Movie/deletemovie")
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>